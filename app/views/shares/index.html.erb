<% @shares.each do |share| %>
  <tr>
    <td><%= share.id %></td>
    <td><%= share.user_id %></td>
    <td><%= share.content %></td>
    <td><%= link_to 'Show', share %></td>
    <td><%= link_to 'Edit', edit_share_path(share) %></td>
    <td><%= link_to 'Destroy', share, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

